@model Graduate_Project.ViewModels.UserViewModel

@{
    ViewData["Title"] = "AddAdmin";
    Layout = "_AdminLayout";
}

<h1>AddAdmin</h1>

@section MainContent{
    <html lang="ar" dir="rtl">
    <head>
        <link rel="stylesheet" href="/css/style.css" asp-append-version="true" />
        <style>
            label.control-label {
                text-align: right; /* Right-align the labels */
                display: block; /* Ensure block display for proper alignment */
            }
        </style>
    </head>
    <body>
        <div class="container py-4 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration p-5" style="border-radius: 20px; padding-bottom:0 !important">
                        <div class="card-body m-2 Maincolor">
                            <h3 class="mb-4 pb-2 pb-md-0" style="text-align: center; color: #6f6f6fd1;">اضافة حساب</h3>
                            <hr />

                            <form asp-action="AddAdmin" asp-controller="Account">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="UserName" class="control-label" style="text-align: right;"></label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Email" class="control-label" style="text-align: right;"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Password" class="control-label" style="text-align: right;"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group" style="text-align: right;">
                                    <!-- Add text-align: right -->
                                    <span asp-validation-for="IsAdmin" class="text-danger"></span>
                                    <label>
                                        <input asp-for="IsAdmin" type="checkbox" /> إضافة كأدمن
                                    </label>
                                    
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="انشاء حساب" class="btn btn-custom w-100 btn-lg btn-style" />
                                </div>

                                <div style="text-align: right;">
                                    <!-- Align the link to the right -->
                                    <a style="font-size: 15px; color: #6f6f6fd1;" asp-action="Index" asp-controller="Admin">الرجوع للخلف</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    </html>


}