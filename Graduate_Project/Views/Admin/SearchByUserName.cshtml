@{
    Layout = "_AdminLayout";
    int count = 1;
}

@section MainContent {

    <html lang="en" dir="ltr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Student Information Table</title>
        <link href="/css/searchTableStyle.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    </head>
    <body>
        <div class="container" dir="ltr" style="background-color:#fcfcfc">
            <h2>Student Search</h2>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for Username..." class="form-control mb-3">

            <table id="myTable" class="table table-striped table-bordered table-responsive">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Student ID</th>
                        <th>Full Name</th>
                        <th>Email Address</th>
                        <th>Phone Number</th>
                        <th>University</th>
                        <th>College</th>
                        <th>Specialization</th>
                        <th>Degree</th>
                        <th>Username</th>
                        <th>Skill</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@student.GraduationStudentId</td>
                            <td>@student.Name</td>
                            <td>@student.Email</td>
                            <td>@student.Phone</td>
                            <td>@student.University</td>
                            <td>@student.College</td>
                            <td>@student.Specialization</td>
                            <td>@student.Degree</td>
                            <td>@student.UserId</td>
                            <td>@student.SkillName</td>

                            <td style="text-align: center;">
                                <a asp-action="DeleteStudent" asp-controller="Admin" asp-route-graduationStudentId="@student.GraduationStudentId" onclick="return confirmDelete()" title="Delete" data-toggle="tooltip">
                            <i class="material-icons" style="color: red">&#xE872;</i>
                            </a>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </body>
    </html>

    <script src="/js/JavaScript.js"></script>

}
